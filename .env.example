# ==================================================
# LOGISTICS ROUTE OPTIMIZER - ENVIRONMENT VARIABLES
# ==================================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ==================================================
# BLOCKCHAIN NETWORK CONFIGURATION
# ==================================================

# Private key for deployer wallet (without 0x prefix)
# ⚠️ NEVER share this or commit it to git!
# Generate a new wallet for testnet: npx hardhat node
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Sepolia Testnet RPC URL
# Get free RPC from: https://infura.io or https://alchemy.com
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Alternative: Alchemy Sepolia RPC
# SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Mainnet RPC (for production deployment)
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Chain IDs
CHAIN_ID=11155111  # Sepolia
# CHAIN_ID=1       # Ethereum Mainnet

# ==================================================
# CONTRACT VERIFICATION
# ==================================================

# Etherscan API Key for contract verification
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ==================================================
# GAS CONFIGURATION
# ==================================================

# Enable gas reporting in tests
REPORT_GAS=true

# CoinMarketCap API for gas price in USD
# Get from: https://pro.coinmarketcap.com/account
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Gas price settings (in Gwei)
GAS_PRICE=20
GAS_LIMIT=8000000

# ==================================================
# CONTRACT CONFIGURATION
# ==================================================

# Deployed contract address (update after deployment)
CONTRACT_ADDRESS=0xE235A5C0DbF47ba76db3912c80267F9B43B8d1a8

# Contract owner address
OWNER_ADDRESS=0x299969b6Ddc4C2319116b2492E618819fA5538eB

# Pauser addresses (comma-separated list)
# These addresses can pause/unpause the contract in emergencies
PAUSER_ADDRESS_1=0x299969b6Ddc4C2319116b2492E618819fA5538eB
PAUSER_ADDRESS_2=
PAUSER_ADDRESS_3=

# Initial pausers to add on deployment (comma-separated)
INITIAL_PAUSERS=0x299969b6Ddc4C2319116b2492E618819fA5538eB

# ==================================================
# FRONTEND CONFIGURATION (Next.js)
# ==================================================

# WalletConnect Project ID
# Get from: https://cloud.walletconnect.com
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=demo

# Contract address for frontend
NEXT_PUBLIC_CONTRACT_ADDRESS=0xE235A5C0DbF47ba76db3912c80267F9B43B8d1a8

# Network chain ID for frontend
NEXT_PUBLIC_CHAIN_ID=11155111

# RPC URL for frontend (public)
NEXT_PUBLIC_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# ==================================================
# DEPLOYMENT CONFIGURATION
# ==================================================

# Hardhat network for deployment
HARDHAT_NETWORK=sepolia

# Enable debug mode
DEBUG=false

# Compiler settings
SOLC_VERSION=0.8.24
OPTIMIZER_ENABLED=true
OPTIMIZER_RUNS=200
EVM_VERSION=cancun

# ==================================================
# VERCEL DEPLOYMENT (Frontend)
# ==================================================

# Vercel deployment token
# Get from: https://vercel.com/account/tokens
VERCEL_TOKEN=your_vercel_token_here

# Vercel organization ID
VERCEL_ORG_ID=your_org_id_here

# Vercel project ID
VERCEL_PROJECT_ID=your_project_id_here

# ==================================================
# SECURITY & MONITORING
# ==================================================

# Enable security checks
ENABLE_SECURITY_CHECKS=true

# Slither analysis
RUN_SLITHER=false

# Enable contract size checks
CHECK_CONTRACT_SIZE=true
MAX_CONTRACT_SIZE=24576  # 24KB

# ==================================================
# TESTING CONFIGURATION
# ==================================================

# Test network settings
TEST_TIMEOUT=120000  # 2 minutes
TEST_GAS_REPORTER=true

# Coverage settings
COVERAGE_ENABLED=true
COVERAGE_DIR=./coverage

# ==================================================
# FHEVM CONFIGURATION
# ==================================================

# Gateway URL for FHE operations
GATEWAY_URL=https://gateway.zama.ai

# ACL contract address (Zama's)
ACL_ADDRESS=

# KMS Verifier address (Zama's)
KMS_VERIFIER_ADDRESS=

# ==================================================
# CI/CD CONFIGURATION
# ==================================================

# GitHub token for automated workflows
GITHUB_TOKEN=

# NPM token for package publishing
NPM_TOKEN=

# Docker Hub credentials
DOCKER_USERNAME=
DOCKER_PASSWORD=

# Codecov token for coverage reports
CODECOV_TOKEN=

# ==================================================
# DEVELOPMENT CONFIGURATION
# ==================================================

# Local Hardhat node
LOCAL_RPC_URL=http://127.0.0.1:8545
LOCAL_CHAIN_ID=31337

# Development mode
NODE_ENV=development

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ==================================================
# PERFORMANCE OPTIMIZATION
# ==================================================

# Enable code splitting
NEXT_OPTIMIZE_FONTS=true
NEXT_OPTIMIZE_IMAGES=true

# Build configuration
GENERATE_SOURCEMAP=false
ANALYZE_BUNDLE=false

# ==================================================
# RATE LIMITING & DOS PROTECTION
# ==================================================

# Maximum requests per address per hour
MAX_REQUESTS_PER_HOUR=100

# Minimum time between requests (seconds)
MIN_REQUEST_INTERVAL=60

# Maximum gas per transaction
MAX_GAS_PER_TX=5000000

# ==================================================
# NOTES
# ==================================================
# 1. Copy this file to .env: cp .env.example .env
# 2. Fill in your actual values
# 3. Never commit .env to git
# 4. Keep your private keys secure
# 5. Use different wallets for testnet and mainnet
# 6. Rotate API keys regularly
# 7. Use environment-specific configurations
# 8. Test on Sepolia before mainnet deployment

# ==================================================
# SECURITY CHECKLIST
# ==================================================
# [ ] Private key is secure and not shared
# [ ] .env is in .gitignore
# [ ] API keys are valid and active
# [ ] Deployer wallet has sufficient ETH
# [ ] Pauser addresses are configured
# [ ] Network settings are correct
# [ ] Gas settings are appropriate
# [ ] All secrets are kept confidential
